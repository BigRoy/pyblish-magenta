environment: maya2015-centos
install:
# System dependencies
- yum install -y git

# Python dependencies
- wget https://bootstrap.pypa.io/get-pip.py && mayapy get-pip.py
- mayapy -m pip install nose

script:

# Pyblish Libraries
- cd /ci
- git clone https://github.com/pyblish/pyblish-x.git
- git clone https://github.com/BigRoy/lucidity.git
- git clone https://github.com/mottosso/pyblish-magenta.git
- cd pyblish-x
- git submodule update --init
- PYTHONPATH=$(pwd)/pythonpath

# Start
- cd ../pyblish-magenta
- mayapy run_testsuite.py
